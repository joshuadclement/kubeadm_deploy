apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-cert-manager
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ letsencrypt_email }}
    privateKeySecretRef:
      name: letsencrypt-privatekey
    solvers:
    - http01:
        ingress:
          class: nginx
